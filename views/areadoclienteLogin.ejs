<!DOCTYPE html>
<html lang="pt-br">
<%- include('./partials/head') %>

  <head>
    <link rel="stylesheet" href="/css/areadocliente.css">
  </head>

  <body>
    <%- include('./partials/navbar') %>

      <main class="mainAreaCliente">
        <section calss="login-content">
          <h2 id="login-title">Faça seu Login</h2>
          <div class="formulario-login">
            <form class="formulario-login-content" action="/areadocliente/login" method="POST">

              <div class="datas-container">
                <div class="inputAll">
                  <label class="datas-container" id="email" for="email">E-mail</label>
                  <input class="datas-container" type="email" name="email" id="email" placeholder="E-mail" required>
                  <label class="datas-container" id="senha" for="password">Senha</label>
                  <input class="datas-container" type="password" name="password" id="password" placeholder="Senha"
                    required>
                   <input class="botao-entrar" id="botao-entrar" type="submit" name="Entrar" value="Entrar">
                </div>
                
              </div>
              <div class="span">
                <span class="novo-cliente">Novo cliente?
                <a class="cadastre-se" href="/areadocliente/cadastro">Cadastre-se aqui →</a>
              </span>
              </div>
            </form>
          </div>
      </main>


      <%- include('./partials/footet.ejs') %>

      <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast" id="myToast">
          <div class="toast-header">
              <strong class="me-auto"><i class="bi-gift-fill"></i> Login de usuário</strong>
              
              <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
          </div>
          <div class="toast-body">
              Usuário ou senha inválidos! 
          </div>
      </div>
        </div>
      </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
          crossorigin="anonymous"></script>

          <script type="text/javascript">
            var message = <%- errors %>;
            console.log(message);
            console.log(<%- errors %>);
            if (message.length>0)
            showToast();
      
            // console.log(message)
            
            // if(message) 
            // {
            //   showToast();
            // }
            
            function showToast(){
              var el = document.getElementById("myToast");
              var tst = new bootstrap.Toast(el);
      
              tst.show()
      
            };
            
            
            </script>
  </body>

</html>