  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/areadocliente.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <script src="../scripts/carousel.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
  
  <title>Jazz Bass</title>
</head>
<body>
  <header>
    <div class="cabecalho">
      <img class="logo" src="/img/logo_jazz_bass.png" alt="logo">
    </div>  
  </header>
  <nav class="navbar navbar-expand-lg navbar-color">
    <div class="container-fluid my-container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item px-5 fs-5">
            <a class="nav-link mx-auto" style="width: 200%" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item dropdown px-5 fs-5">
            <a class="nav-link dropdown-toggle" href="./shop.html" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Instrumentos
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/baixo">Baixos</a></li>
              <li><a class="dropdown-item" href="/guitarra">Guitarras</a></li>
              <li><a class="dropdown-item" href="/violao">Violão</a></li>
            </ul>
          </li>
          <li class="nav-item px-5 fs-5">
            <a class="nav-link" href="/areadoclientelogin">Área do Cliente</a>
          </li>
          <li class="nav-item">
          </li>
        </ul>
      </div>
    </div>
    <div class="icones-cabecalho"> 
      <a class="busca" href="/busca"><i class="bi bi-search px-2 fs-4"></a></i>
      <a class="carrinho" href="/carrinho"><i class="bi bi-cart-fill px-2 fs-4"></i></a>
      <a class="area-do-cliente" href="/areadoclientelogin"><i class="bi bi-person-fill px-2 fs-4"></i></a>
       </div>
  </nav>
  <main>
    <section calss="login-content">
            <h2 id="login-title">Faça seu Login</h2>
            <div class="formulario-login">
                <form class="formulario-login-content" action="/areadoclientelogin/criar" method="POST">

                    <div class="datas-container">
                        <label class="datas-container" id="email" for="email">E-mail</label>
                        <input class="datas-container" type="email" name="email" id="email" placeholder="E-mail" required>
                        <label class="datas-container" id="senha" for="password">Senha</label>
                        <input class="datas-container" type="password" id="password" placeholder="Senha" required>
                        <input class="botao-entrar" id="botao-entrar" type="submit" name="Entrar" value="Entrar">
                    </div>
                        <span class="novo-cliente">Novo cliente?</span>
                        <a class="cadastre-se" href= "/cadastro">Cadastre-se aqui →</a>    
                </form>
            </div>
  </main>
  
  <%- include('./partials/footet.ejs') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
