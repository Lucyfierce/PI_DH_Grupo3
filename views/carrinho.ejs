    <div class="container">
        <div class="cart-container">
            <header>
                <h3>Carrinho de Compras</h3>
            </header>
            <div class="cart-body">
                <div class="cart-item">
                    <div class="cart-row">
                        <div class="cart-row-cell pic">
                            <a href="#">-</a>

                            <span></span>

                        </div>
                        <div class="cart-row-cell desc">
                            <h5>Baixo</h5>
                            <p>Sire Marcus Miller V3</p>

                        </div>

                        <div class="cart-row-cell quant">

                            <ul>
                                <li><a href="#">-</a></li>
                                <li>1</li>
                                <li><a href="#">+</a></li>
                            </ul>

                        </div>

                        <div class="cart-row-cell amount">
                            <p>R$4.100,00</p>
                        </div>

                    </div>

                    <div class="cart-row">
                        <div class="cart-row-cell pic">
                            <a href="#">-</a>
                            <span></span>

                        </div>

                        <div class="cart-row-cell desc">
                            <h5>Guitarra</h5>
                            <p>Sire Larry Carlton H7</p>
                        </div>

                        <div class="cart-row-cell quant">

                            <ul>
                                <li><a href="#">-</a></li>
                                <li>1</li>
                                <li><a href="#">+</a></li>
                            </ul>

                        </div>

                        <div class="cart-row-cell amount">
                            <p>R$8.300,00</p>
                        </div>

                    </div>

                    <div class="cart-row">
                        <div class="cart-row-cell pic">
                            <a href="#">-</a>
                            <span></span>

                        </div>

                        <div class="cart-row-cell desc">

                            <h5>Violão</h5>
                            <p>Sire Larry Carlton A3</p>

                        </div>

                        <div class="cart-row-cell quant">

                            <ul>
                                <li><a href="#">-</a></li>
                                <li>1</li>
                                <li><a href="#">+</a></li>
                            </ul>

                        </div>

                        <div class="cart-row-cell amount">
                            <p>R$2.100,00</p>
                        </div>
                    </div>
                </div>
            </div>

            <section>

                <div class="totals">
                    <p class="total-label">Subtotal</p>
                    <p class="total-amount">R$14.500,00</p>
                </div>
                <div class="totals">
                    <p class="total-label">Taxa de entrega</p>
                    <p class="total-amount">R$200,00</p>
                </div>
                <div class="totals">
                    <p class="total-label">Total</p>
                    <p class="total-amount">R$14.700,00</p>
                </div>
                <button>Finalizar Compra</button>


            </section>

        </div>

    </div>
    
